<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/formpersonaldata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.formpersonaldata.FormPersonalDataFragment">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbar"
            app:title="Formulário 2/4"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>
        <ProgressBar
            android:id="@+id/progress_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:orientation="vertical"
            android:id="@+id/ln_main"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:hintAnimationEnabled="true"
                android:hint="Estabelecimento de ensino"
                android:id="@+id/til_college"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:maxLines="1"
                    android:id="@+id/edt_college_name"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:hintAnimationEnabled="true"
                android:hint="Número do semestre"
                android:id="@+id/til_semester_number"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:id="@+id/edt_semester_number"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:text="Período do semestre"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    app:hintAnimationEnabled="true"
                    android:hint="Início"
                    android:id="@+id/til_period_start"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_height="wrap_content"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:maxLines="1"
                        android:id="@+id/edt_period_start"
                        style="@style/Widget.AppCompat.EditText"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginEnd="16dp"
                    app:hintAnimationEnabled="true"
                    android:hint="Término"
                    android:id="@+id/til_period_end"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_height="wrap_content"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:maxLines="1"
                        android:id="@+id/edt_period_end"
                        style="@style/Widget.AppCompat.EditText"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <TextView
                android:text="Nível"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="vertical"
                android:id="@+id/toggle_group_level"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:singleSelection="true"
                android:layout_width="match_parent">
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:id="@+id/btn_fundamental"
                    android:layout_height="wrap_content"
                    android:text="Fundamental"/>
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:id="@+id/btn_medio"
                    android:layout_height="wrap_content"
                    android:text="Médio"/>
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:id="@+id/btn_tecnico"
                    android:layout_height="wrap_content"
                    android:text="Técnico"/>
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:id="@+id/btn_pre_vestibular"
                    android:layout_height="wrap_content"
                    android:text="Pré-vestibular"/>
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:id="@+id/btn_superior"
                    android:layout_height="wrap_content"
                    android:text="Superior"/>
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:id="@+id/btn_eja"
                    android:layout_height="wrap_content"
                    android:text="Eja presencial"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <TextView
                android:text="Turno"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:id="@+id/toggle_group_turn"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:singleSelection="false"
                android:layout_width="match_parent">
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/bt_manha"
                    android:layout_height="wrap_content"
                    android:text="Manhã"/>
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/bt_tarde"
                    android:layout_height="wrap_content"
                    android:text="Tarde"/>
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/bt_noite"
                    android:layout_height="wrap_content"
                    android:text="Noite"/>


            </com.google.android.material.button.MaterialButtonToggleGroup>

            <TextView
                android:text="Dias em que pegará ônibus"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                style="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:id="@+id/toggle_days"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:singleSelection="false"
                android:layout_width="match_parent">
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/bt_segunda"
                    android:layout_height="wrap_content"
                    android:text="Segunda"/>
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/bt_terca"
                    android:layout_height="wrap_content"
                    android:text="Terça"/>
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/bt_quarta"
                    android:layout_height="wrap_content"
                    android:text="Quarta"/>
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/bt_quinta"
                    android:layout_height="wrap_content"
                    android:text="Quinta"/>
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/bt_sexta"
                    android:layout_height="wrap_content"
                    android:text="Sexta"/>
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/bt_sabado"
                    android:layout_height="wrap_content"
                    android:text="Sábado"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/margin_default"
                android:layout_marginBottom="@dimen/margin_default"
                android:text="@string/text_bt_next"
                app:layout_constraintTop_toBottomOf="@+id/cv_id_verse"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/bt_next"
                app:layout_constraintBottom_toBottomOf="parent"
                android:backgroundTint="@color/colorAccent"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
